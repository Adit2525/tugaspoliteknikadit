<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            app:srcCompat="@drawable/poli"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang di Politeknik Negeri Padang"
            android:layout_gravity="center"
            android:layout_marginTop="100sp"
            android:textSize="50px"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limau Manih, Padang, Sumbar"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"/>

        <Button
            android:id="@+id/btnM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="manajemen informatika"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10sp"/>

        <Button
            android:id="@+id/btnTK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="teknik komputer"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnGP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="galeri photo"
            android:layout_gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>